<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="stdmansys.homepage.StartPageController">
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                    <padding><Insets top="10" left="10" bottom="10" /></padding>
                    <children>
                        <ImageView fx:id="schlogo" fitHeight="80.0" fitWidth="60.0" smooth="true"
                                   preserveRatio="true" cache="true">
                            <image><Image url="@images/school_logo.png" /></image>
                        </ImageView>
                        <Text textAlignment="CENTER" text="My Demo School"></Text>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <padding><Insets top="10" left="10" right="10" bottom="10" /></padding>
                    <children>
                        <Label fx:id="user" text="U" alignment="CENTER" onMouseClicked="#handleUserLabelOnClick">
                            <contextMenu>
                                <ContextMenu fx:id="contxtMenuUser">
                                    <items>
                                        <MenuItem fx:id="changePassword" text="Change Password" />
                                        <MenuItem fx:id="logout" text="Logout" />
                                    </items>
                                </ContextMenu>
                            </contextMenu>
                        </Label>
                    </children>
                </HBox>
            </children>
        </HBox>
        <HBox VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="CENTER" spacing="30" HBox.hgrow="ALWAYS">
                    <padding><Insets right="5" left="5" top="30" bottom="30" /></padding>
                    <children>
                        <Button fx:id="regStdBtn" text="Register New Student" prefWidth="250" prefHeight="60"
                                minWidth="210" minHeight="40" VBox.vgrow="ALWAYS"></Button>
                        <Button fx:id="beginSessionBtn" text="Begin New Session" prefWidth="250" prefHeight="60"
                                minWidth="210" minHeight="40" VBox.vgrow="ALWAYS"></Button>
                        <Button fx:id="beginTermBtn" text="Begin New Term" prefWidth="250" prefHeight="60"
                                minWidth="210" minHeight="40" VBox.vgrow="ALWAYS"></Button>
                        <Button fx:id="rsltUp" text="Result Upload" prefWidth="250" prefHeight="60"
                                minWidth="210" minHeight="40" VBox.vgrow="ALWAYS"></Button>
                        <Button fx:id="viewgrdShtBtn" text="View Grade Sheet" prefWidth="250" prefHeight="60"
                                minWidth="210" minHeight="40" VBox.vgrow="ALWAYS"></Button>
                        <Button fx:id="viewStdRepBtn" text="View Student Report" prefWidth="250" prefHeight="60"
                                minWidth="210" minHeight="40" VBox.vgrow="ALWAYS"></Button>
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                    <padding><Insets right="220" left="220" /></padding>
                    <children>
                        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                            <children>
                                <TextField fx:id="searchBox" promptText="Search student with ID"
                                           prefWidth="380" prefHeight="55" minWidth="300"
                                           HBox.hgrow="ALWAYS"></TextField>
                                <Button fx:id="searchBtn" prefWidth="55" prefHeight="55"
                                        minWidth="40" HBox.hgrow="ALWAYS" alignment="CENTER">
                                    <graphic>
                                        <ImageView fitHeight="40.0" fitWidth="40.0" smooth="true"
                                                   preserveRatio="true" cache="true">
                                            <image><Image url="@images/search_icon.png" /></image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>

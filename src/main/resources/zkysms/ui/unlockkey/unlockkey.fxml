<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="zkysms.ui.unlockkey.UnlockKeyController" spacing="10" alignment="CENTER">
    <children>
        <GridPane VBox.vgrow="NEVER" prefWidth="440" minWidth="440" maxWidth="440" alignment="CENTER">
            <padding><Insets top="10" bottom="10" right="10" left="10" /></padding>
            <children>
                <HBox alignment="CENTER_LEFT" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <padding><Insets top="10" left="10" bottom="5" /></padding>
                    <children>
                        <Text text="Unlock Secret Key">
                            <font>
                                <Font size="24" name="Arial" />
                            </font>
                        </Text>
                    </children>
                </HBox>
                <GridPane alignment="CENTER" vgap="15" hgap="10" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <padding><Insets right="10" left="10" top="10" /></padding>
                    <children>
                        <Label text="KeyStore Password" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="kpasswordTxtFld" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200" prefHeight="35" onKeyTyped="#handleOnKeyTyped" />
                        <Label text="SecretKey Entry Password" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <TextField fx:id="epasswordTxtFld" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200" prefHeight="35" onKeyTyped="#handleOnKeyTyped" />
                    </children>
                </GridPane>
                <HBox fx:id="errorLblBox" alignment="CENTER_LEFT" GridPane.rowIndex="2" GridPane.columnIndex="0">
                    <padding><Insets right="10" left="10" bottom="3" top="3" /></padding>
                    <children>
                        <Label text="Incorrect Password(s)" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" GridPane.rowIndex="3" GridPane.columnIndex="0">
                    <padding><Insets right="10" left="10" bottom="10" top="3" /></padding>
                    <children>
                        <Button fx:id="unlockBtn" prefWidth="80" prefHeight="35" text="Unlock" onAction="#handleOnAction" disable="true" />
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</VBox>